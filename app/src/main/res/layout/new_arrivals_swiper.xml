<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView android:layout_height="250dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.bookaholicc.CustomUI.OpenSansBold
            android:text="Combo Mania !!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/my_black"
            android:layout_marginTop="8dp"
            android:id="@+id/textView14"
            />

        <com.bookaholicc.CustomUI.OpenSansTextView
            android:text="Fully packaged, Tailored For your needs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/textView14" />
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_below="@id/textView16"
           android:layout_height="200dp">
           <android.support.v4.view.ViewPager
               android:layout_width="match_parent"
              android:layout_height="match_parent"
               android:id="@+id/home_top_pager"
            >


           </android.support.v4.view.ViewPager>
           <com.bookaholicc.CustomUI.InkPageIndicator

               android:id="@+id/indicator"
               android:layout_width="match_parent"

               android:layout_height="wrap_content"
               android:layout_gravity="bottom"
               android:layout_marginBottom="20dp"
               android:layout_marginTop="@dimen/padding_normal"
               app:pageIndicatorColor="@color/material_redA400"
               app:currentPageIndicatorColor="@color/material_white" />
       </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>