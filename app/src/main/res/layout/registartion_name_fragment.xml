<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/material_redA400"
    android:layout_height="wrap_content">

    <com.bookaholicc.CustomUI.HelviticaTv
        android:layout_width="match_parent"
        android:text="Sign Up"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/material_grey50"
        android:layout_height="wrap_content"
        android:id="@+id/s_title" />


    <!--FUll Name-->
    <com.bookaholicc.CustomUI.OpenSansTextView
        android:layout_width="wrap_content"
        android:text="Full Name"
        android:layout_marginLeft="12dp"
        android:id="@+id/s_name_text"
        android:textSize="14sp"
        android:paddingLeft="4dp"
        android:textColor="@color/material_white"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        style="@style/s_edit_box"
        android:textSize="18sp"
        android:id="@+id/s_name_e"
        android:hint="Enter Your Name"
        android:drawingCacheQuality="high"
        android:textColor="@color/material_white"
        android:textColorHint="@color/material_grey400"
        android:inputType="textPersonName"
        android:layout_below="@+id/s_name_text"
        android:layout_height="wrap_content" />

    <!--Email-->
    <com.bookaholicc.CustomUI.OpenSansTextView
        android:layout_width="wrap_content"
        android:text="E-mail Address"
        android:layout_marginLeft="12dp"
        android:id="@+id/s_e_text"
        android:textSize="14sp"
        android:paddingLeft="4dp"
        android:textColor="@color/material_white"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/s_t_mtop" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        style="@style/s_edit_box"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:hint="Your email goes here"
        android:drawingCacheQuality="high"
        android:textColor="@color/material_white"
        android:textColorHint="@color/material_grey400"
        android:id="@+id/s_email_e"
        android:layout_below="@+id/s_name_text"
        android:layout_height="wrap_content" />

    <!--Password-->
    <com.bookaholicc.CustomUI.OpenSansTextView
        android:layout_width="wrap_content"
        android:text="Password"
        android:layout_marginLeft="12dp"
        android:id="@+id/s_pass_text"
        android:textSize="14sp"
        android:paddingLeft="4dp"
        android:textColor="@color/material_white"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/s_t_mtop" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        style="@style/s_edit_box"
        android:textSize="18sp"
        android:id="@+id/s_pass_e"
        android:inputType="textPassword"
        android:hint="*********"
        android:drawingCacheQuality="high"
        android:textColor="@color/material_white"
        android:textColorHint="@color/material_grey400"

        android:layout_below="@+id/s_name_text"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        style="@style/login_button_white"
        android:layout_marginTop="@dimen/s_b_mtop"
        android:text="Login"
        android:id="@+id/s_signup_button"
        android:textAllCaps="false"
        />

</LinearLayout>
</ScrollView>