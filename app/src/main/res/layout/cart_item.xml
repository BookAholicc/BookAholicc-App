<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_item_root"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="120dp"
            app:srcCompat= "@mipmap/fifa"
            android:id="@+id/cart_item_image"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/cart_item_pname"
            android:layout_width="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="The Long Title o f Book jsdsdksjdkjkdjlasjdlasjdjaskd"
            android:layout_toEndOf="@+id/cart_item_image"
            android:layout_toStartOf="@+id/linearLayout"
            android:layout_alignParentBottom="true" />


        <LinearLayout
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:weightSum="2"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="321"
                android:gravity="center"
                android:layout_height="0dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/cart_item_spinner"
                android:layout_height="0dp">

            </Spinner>

        </LinearLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>