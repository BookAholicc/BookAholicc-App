<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:layout_width="80dp"
            app:srcCompat= "@mipmap/fifa"
            android:id="@+id/cart_item_image"
            android:layout_height="match_parent" />

        <com.bookaholicc.CustomUI.OpenSansTextView
            android:id="@+id/cart_item_pname"
            android:layout_width="wrap_content"
            android:textColor="@color/my_black"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:layout_marginTop="12dp"

            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="The Long Title o f Book jsdsdksjdkjkdjlasjdlasjdjaskd"
            android:layout_toEndOf="@+id/cart_item_image"
            android:layout_toStartOf="@+id/linearLayout"
            />


        <LinearLayout
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:weightSum="2"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/cart_item_price"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="321"
                android:gravity="center"
                android:layout_height="0dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/cart_item_spinner"
                android:layout_height="0dp">

            </Spinner>

        </LinearLayout>


    </RelativeLayout>
