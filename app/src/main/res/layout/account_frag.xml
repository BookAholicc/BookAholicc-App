<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"

   >



    <!--Name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal"

        android:weightSum="1">

        <ImageView
            android:id="@+id/acc_uname_res"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_avatar"
            />
        <RelativeLayout
            android:layout_width="0dp"

            android:paddingLeft="12dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9">
            <TextView
                android:layout_width="wrap_content"
                android:text="Name"

                android:layout_marginTop="11dp"
                android:id="@+id/acct_name_text"
                android:layout_height="wrap_content"


                style ="@style/account_top_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Nandha Kumar"


                android:id="@+id/acct_name_value"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acct_name_text"
                style="@style/account_value_text"
                 />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_grey400"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <!--Phone Number-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal"

        android:weightSum="1">

        <ImageView
            android:id="@+id/acc_phone_res"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_phone_black_24dp"
            />
        <RelativeLayout
            android:layout_width="0dp"

            android:paddingLeft="12dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9">
            <TextView
                android:layout_width="wrap_content"
                android:text="Phone Number"
                style ="@style/account_top_text"
                android:layout_marginTop="11dp"
                android:id="@+id/acct_phone_text"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:text="9688612122"

                style="@style/account_value_text"
                android:id="@+id/acct_phone_value"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acct_phone_text"
                />
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/material_grey400"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />
    <!--Password-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal"

        android:weightSum="1">

        <ImageView
            android:id="@+id/acc_email_res"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_menu_send" />

        <RelativeLayout
            android:layout_width="0dp"

            android:paddingLeft="12dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9">
            <TextView
                android:layout_width="wrap_content"
                android:text="Email"
                style ="@style/account_top_text"
                android:layout_marginTop="11dp"
                android:id="@+id/acct_email_text"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:text="nandhakumar1411@gmail.com"

                style="@style/account_value_text"
                android:id="@+id/acct_email_value"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acct_email_text"
               />
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_grey400"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <include layout="@layout/profile_view_fragment"/>


</LinearLayout>

</ScrollView>