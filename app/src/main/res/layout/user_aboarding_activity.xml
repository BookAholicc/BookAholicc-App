<?xml version="1.0" encoding="utf-8"?>

<!--A Stub Layout is needed to hold the Fragments-->
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/ua_frag_holder"
    android:background="@color/material_redA400"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.bookaholicc.CustomUI.WhitenyBooksFont
        android:layout_width="match_parent"
        android:text="Pick a user Name"
        android:textColor="@color/material_white"
        android:textSize="25sp"
        android:gravity="center"
        android:id="@+id/ua_username"
        android:layout_marginTop="150dp"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_below="@id/ua_username"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/ua_u_edit"
        android:layout_marginRight="32dp"

        android:layout_height="60dp" />
    <Button
        android:layout_width="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:text="COntinue"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />
</RelativeLayout>